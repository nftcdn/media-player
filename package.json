{
  "name": "@nftcdn/media-player",
  "description": "Media Viewer/Player web component originally designed to display Cardano NFTS",
  "license": "MIT",
  "author": "NFTCDN LTD",
  "version": "1.1.2",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./nftcdn-media-player.js": "./dist/src/nftcdn-media-player.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepare": "husky",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"storybook dev -p 8000 --no-version-updates\"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && storybook build"
  },
  "dependencies": {
    "@google/model-viewer": "^4.1.0",
    "@lit/task": "^1.0.3",
    "lit": "^3.1.4",
    "three": "^0.172.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.7",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-backgrounds": "8.6.14",
    "@storybook/addon-controls": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/manager-api": "8.6.14",
    "@storybook/web-components": "8.6.14",
    "@storybook/web-components-vite": "^8.6.14",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.20.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.11",
    "prettier": "^3.3.3",
    "storybook": "8.6.14",
    "typescript": "~5.5.4"
  },
  "overrides": {
    "node-fetch@2.x": {
      "whatwg-url": "14.x"
    }
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nftcdn/media-player.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
